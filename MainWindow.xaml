<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WSL_Manager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WSL_Manager"
    xmlns:models="using:WSL_Manager.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WSL Manager">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <!-- Barre de titre -->
            <RowDefinition Height="Auto"/>
            <!-- Barre de notifications -->
            <RowDefinition Height="Auto"/>
            <!-- Contenu principal -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ==================== BARRE DE TITRE ==================== -->
        <Grid Grid.Row="0" Padding="24,20" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="4">
                <TextBlock Text="WSL Manager"
                          FontSize="28"
                          FontWeight="SemiBold"/>
                <TextBlock Text="Gérez vos distributions Linux en toute simplicité"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          FontSize="13"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Click="Install_Click"
                       Style="{StaticResource AccentButtonStyle}"
                       ToolTipService.ToolTip="Installer une nouvelle distribution">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Add"/>
                        <TextBlock Text="Installer"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding UpdateWslCommand}"
                       ToolTipService.ToolTip="Mettre à jour WSL">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE895;"/>
                        <TextBlock Text="MAJ WSL"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding ShutdownAllCommand}"
                       ToolTipService.ToolTip="Arrêter toutes les distributions">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE7E8;"/>
                        <TextBlock Text="Tout arrêter"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding RefreshCommand}"
                       ToolTipService.ToolTip="Rafraîchir la liste">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Refresh"/>
                        <TextBlock Text="Rafraîchir"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- ==================== BARRE DE NOTIFICATIONS ==================== -->
        <InfoBar x:Name="NotificationBar"
                Grid.Row="1"
                Margin="24,8,24,0"
                IsOpen="False"
                IsClosable="True"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                Padding="16">
            <InfoBar.Shadow>
                <ThemeShadow />
            </InfoBar.Shadow>
        </InfoBar>

        <!-- ==================== CONTENU PRINCIPAL ==================== -->
        <Grid Grid.Row="2" Padding="24">

            <!-- Indicateur de chargement avec message friendly -->
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Spacing="16"
                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <ProgressRing IsActive="True"
                            Width="60" Height="60"/>
                <TextBlock Text="Chargement de vos distributions..."
                          Style="{StaticResource BodyTextBlockStyle}"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- État vide - Aucune distribution trouvée -->
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Spacing="16"
                       Visibility="{Binding IsEmptyState, Converter={StaticResource BoolToVisibilityConverter}}">
                <FontIcon Glyph="&#xE74C;"
                         FontSize="72"
                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                <TextBlock Text="Aucune distribution WSL trouvée"
                          Style="{StaticResource TitleTextBlockStyle}"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Installez WSL pour commencer à utiliser Linux sur Windows"
                          Style="{StaticResource BodyTextBlockStyle}"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          MaxWidth="400"
                          TextAlignment="Center"/>
                <HyperlinkButton Content="En savoir plus sur WSL"
                               NavigateUri="https://learn.microsoft.com/windows/wsl/install"/>
            </StackPanel>

            <!-- Liste des distributions avec design moderne -->
            <ScrollViewer Visibility="{Binding HasDistributions, Converter={StaticResource BoolToVisibilityConverter}}">
                <ItemsRepeater ItemsSource="{Binding Distributions}" Margin="0,0,0,80">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="12"/>
                    </ItemsRepeater.Layout>

                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <!-- Carte de distribution moderne avec effet d'ombre -->
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Padding="20"
                                   PointerEntered="Card_PointerEntered"
                                   PointerExited="Card_PointerExited"
                                   Translation="0,0,8">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>

                                <Grid ColumnSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icône et indicateur d'état -->
                                    <Grid Grid.Column="0">
                                        <Border Width="64" Height="64"
                                               Background="{ThemeResource AccentFillColorDefaultBrush}"
                                               CornerRadius="12"
                                               Opacity="0.15"/>
                                        <FontIcon Glyph="&#xE77B;"
                                                 FontSize="32"
                                                 Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

                                        <!-- Indicateur d'état (point coloré) -->
                                        <Ellipse Width="16" Height="16"
                                                Fill="{Binding IsRunning, Converter={StaticResource StateToColorConverter}}"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,-4,-4,0">
                                            <Ellipse.Shadow>
                                                <ThemeShadow/>
                                            </Ellipse.Shadow>
                                        </Ellipse>
                                    </Grid>

                                    <!-- Informations de la distribution -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="6">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{Binding Name}"
                                                      FontSize="20"
                                                      FontWeight="SemiBold"/>

                                            <!-- Badge "Par défaut" -->
                                            <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                   CornerRadius="4"
                                                   Padding="8,2"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="Par défaut"
                                                          Foreground="White"
                                                          FontSize="11"
                                                          FontWeight="SemiBold"/>
                                            </Border>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <!-- État -->
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon Glyph="&#xE7C1;"
                                                         FontSize="14"
                                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock Text="{Binding State}"
                                                          FontSize="13"
                                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>

                                            <!-- Version WSL -->
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon Glyph="&#xE946;"
                                                         FontSize="14"
                                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock FontSize="13"
                                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="WSL"/>
                                                    <Run Text="{Binding Version}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Boutons d'action -->
                                    <StackPanel Grid.Column="2"
                                               Orientation="Horizontal"
                                               Spacing="8"
                                               VerticalAlignment="Center">

                                        <!-- Démarrer -->
                                        <Button ToolTipService.ToolTip="Démarrer"
                                               Style="{StaticResource AccentButtonStyle}"
                                               Command="{Binding DataContext.StartCommand, ElementName=RootGrid}"
                                               CommandParameter="{Binding}"
                                               Visibility="{Binding IsRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                            <SymbolIcon Symbol="Play"/>
                                        </Button>

                                        <!-- Arrêter -->
                                        <Button ToolTipService.ToolTip="Arrêter"
                                               Command="{Binding DataContext.StopCommand, ElementName=RootGrid}"
                                               CommandParameter="{Binding}"
                                               Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <SymbolIcon Symbol="Stop"/>
                                        </Button>

                                        <!-- Redémarrer (si running) -->
                                        <Button ToolTipService.ToolTip="Redémarrer"
                                               Command="{Binding DataContext.RestartCommand, ElementName=RootGrid}"
                                               CommandParameter="{Binding}"
                                               Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <FontIcon Glyph="&#xE777;"/>
                                        </Button>

                                        <!-- Terminal -->
                                        <Button ToolTipService.ToolTip="Ouvrir le terminal"
                                               Command="{Binding DataContext.OpenTerminalCommand, ElementName=RootGrid}"
                                               CommandParameter="{Binding}">
                                            <FontIcon Glyph="&#xE756;"/>
                                        </Button>

                                        <!-- Explorateur de fichiers -->
                                        <Button ToolTipService.ToolTip="Ouvrir l'explorateur"
                                               Command="{Binding DataContext.OpenExplorerCommand, ElementName=RootGrid}"
                                               CommandParameter="{Binding}">
                                            <SymbolIcon Symbol="Folder"/>
                                        </Button>

                                        <!-- Menu Plus d'options -->
                                        <Button ToolTipService.ToolTip="Plus d'options" Tag="{Binding}">
                                            <FontIcon Glyph="&#xE712;"/>
                                            <Button.Flyout>
                                                <MenuFlyout Placement="Bottom">
                                                    <!-- Informations -->
                                                    <MenuFlyoutItem Text="Voir les informations"
                                                                   Tag="{Binding}"
                                                                   Click="ShowInfo_Click">
                                                        <MenuFlyoutItem.Icon>
                                                            <SymbolIcon Symbol="Important"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <MenuFlyoutSeparator/>

                                                    <!-- Définir par défaut -->
                                                    <MenuFlyoutItem Text="Définir par défaut"
                                                                   Tag="{Binding}"
                                                                   Click="SetDefault_Click">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE735;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <!-- Convertir version -->
                                                    <MenuFlyoutItem Text="Convertir WSL 1 ↔ 2"
                                                                   Tag="{Binding}"
                                                                   Click="ConvertVersion_Click">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8AB;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <!-- Mettre à jour l'instance -->
                                                    <MenuFlyoutItem Text="Mettre à jour les packages"
                                                                   Tag="{Binding}"
                                                                   Click="UpdateInstance_Click">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE777;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <MenuFlyoutSeparator/>

                                                    <!-- Exporter -->
                                                    <MenuFlyoutItem Text="Exporter (backup)"
                                                                   Tag="{Binding}"
                                                                   Click="Export_Click">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8B5;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <MenuFlyoutSeparator/>

                                                    <!-- Supprimer (danger) -->
                                                    <MenuFlyoutItem Text="Supprimer..."
                                                                   Tag="{Binding}"
                                                                   Click="Delete_Click"
                                                                   Foreground="Red">
                                                        <MenuFlyoutItem.Icon>
                                                            <SymbolIcon Symbol="Delete" Foreground="Red"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                </MenuFlyout>
                                            </Button.Flyout>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
